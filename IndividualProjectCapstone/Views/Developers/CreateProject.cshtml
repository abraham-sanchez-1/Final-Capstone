@model IndividualProjectCapstone.Models.Project

@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create A Project!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Give this project a name!</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p class="text-warning">Please take time now to create a repositoty!</p>
                <label class="control-label">Github URL</label>
                <input asp-for="GithubUrl" class="form-control" />
                <span asp-validation-for="GithubUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">What will be the primary technology for this project?</label>
                <input asp-for="PrimaryTechnology" class="form-control" />
                <span asp-validation-for="PrimaryTechnology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Secondary technology?</label>
                <input asp-for="SecondaryTechnology" class="form-control" />
                <span asp-validation-for="SecondaryTechnology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Please describe your project</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Expected end date for project</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

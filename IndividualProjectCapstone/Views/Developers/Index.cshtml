@model IEnumerable<IndividualProjectCapstone.Models.DeveloperViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @* We will be going with a card design for this project *@
            <th>
                Project
            </th>
            <th>
                Owner
            </th>
            <th>
                Roles Needed
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeveloperType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProficiencyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeveloperType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProficiencyLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutUser)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

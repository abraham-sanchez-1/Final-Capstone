@model IndividualProjectCapstone.Models.DeveloperViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@* I will be going with a card design for this project *@
<div class="container">
    <h2>Projects</h2>
    <div class="card-columns">
        @foreach (var EachProject in Model)
        {
            <div class="card text-white bg-primary m-4" style="width: 20rem; height: 15rem;" >
                <div class="card-header"><span class="badge badge-pill badge-info">@EachProject.PrimaryTechnology</span><span class="badge badge-pill badge-info">@EachProject.SecondaryTechnology</span></div>
                <div class="card-body text-center">
                    <h4 class="card-title">@EachProject.Project.Name</h4>@EachProject.Project.
                    <p class="card-text">@EachProject.Project.Description</p>
                    <p class="card-text">Project Owner: @EachProject.Project.Developer.UserName</p>
                    @foreach (var EachOpening in EachProject.Openings)
                    {
                        <p></p>
                    }
                </div>
            </div>
        }
    </div>
</div>






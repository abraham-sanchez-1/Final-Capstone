@model IndividualProjectCapstone.Models.RoleViewModel

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/CreationMenu.cshtml";
}

<h1>Create A Role for project: @Model.Project.Name</h1>

<h4>Role Creation Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Project.Id" class="form-control" />
                <span asp-validation-for="Project.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">What type of developer are you looking for?</label>
                <select asp-for="Opening.RoleId" class="form-control">
                    <option value="1">Front End Development</option>
                    <option value="2">Back End Development</option>
                    <option value="3">Full Stack Development</option>
                    <option value="4">Database Engineering</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">What level of experience is needed?</label>
                <select asp-for="Opening.ProficiencyLevelNeeded" class="form-control">
                    <option value="1">Beginner</option>
                    <option value="2">Intermediate</option>
                    <option value="3">Advanced</option>
                    <option value="4">Expert</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Write an example user story for applicants to see!</label>
                <input asp-for="Opening.ExampleUserStory" class="form-control" />
                <span asp-validation-for="Opening.ExampleUserStory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Role!" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProjectIndex">Back to your projects!</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
